    "def calculate_net_salary():\n",
    "  emp_id = int(input(\"Enter Employee ID: \"))\n",
    "  name = input(\"Enter Employee Name: \")\n",
    "  basic_salary = float(input(\"Enter Basic Salary: \"))\n",
    "\n",
    "  # hra da allowances\n",
    "  hra = basic_salary * 0.35\n",
    "  da = basic_salary * 0.58\n",
    "\n",
    "  # PF\n",
    "  pf = basic_salary * 0.095\n",
    "\n",
    "  # bonus \n",
    "  experience = int(input(\"Enter Years of Experience: \"))\n",
    "  if experience >= 30:\n",
    "    bonus = basic_salary * 0.59\n",
    "  elif experience >= 23:\n",
    "    bonus = basic_salary * 0.51\n",
    "  elif experience >= 15:\n",
    "    bonus = basic_salary * 0.45\n",
    "  elif experience >= 7:\n",
    "    bonus = basic_salary * 0.33\n",
    "  else:\n",
    "    bonus = basic_salary * 0.16\n",
    "\n",
    "  #net salary\n",
    "  net_salary = basic_salary + da + hra - pf + bonus\n",
    "\n",
    "  # Print employee details and salary breakdown\n",
    "  print(\"\\nEmployee Details:\")\n",
    "  print(f\"Employee ID: {emp_id}\")\n",
    "  print(f\"Employee Name: {name}\")\n",
    "  print(\"\\nSalary Breakdown:\")\n",
    "  print(f\"Basic Salary: ₹{basic_salary:.2f}\")\n",
    "  print(f\"HRA (35%): ₹{hra:.2f}\")\n",
    "  print(f\"DA (58%): ₹{da:.2f}\")\n",
    "  print(f\"PF Deduction (9.5%): ₹{pf:.2f}\")\n",
    "  print(f\"Bonus: ₹{bonus:.2f}\")\n",
    "  print(f\"\\nNet Salary: ₹{net_salary:.2f}\")\n",
    "\n",
    "calculate_net_salary()"
   ]
